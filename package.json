{
  "name": "tg-bot",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only server/index.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/server/index.js",
    "client:install": "cd client && npm install",
    "client:build": "cd client && npm run build",
    "client:start": "cd client && npm start",
    "client": "npm run client:start",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "setup": "npm install && npm run prisma:generate && npm run prisma:migrate && npm run client:install",
    "dev:all": "concurrently \"npm run dev\" \"npm run client\"",
    "build:all": "npm run build && npm run client:build",
    "start:all": "node dist/server/index.js",
    "deploy": "npm run setup && npm run build:all && npm run start:all"
  },
  "dependencies": {
    "@prisma/client": "^5.10.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "telegraf": "^4.15.3",
    "winston": "^3.11.0",
    "winston-transport": "^4.7.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/passport-local": "^1.0.38",
    "concurrently": "^8.2.2",
    "prisma": "^5.10.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.3"
  },
  "private": true
}
