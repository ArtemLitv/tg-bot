{
  "name": "tg-bot",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc && mkdir -p dist/config && cp config/bot-config.json dist/config/",
    "start": "node dist/src/index.js",
    "dev": "tsc && mkdir -p dist/config && cp config/bot-config.json dist/config/ && node dist/src/index.js",
