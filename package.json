    "client:start": "cd client && npm start",
    "client": "npm run client:start"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "node-telegram-bot-api": "^0.64.0"
  },
  "devDependencies": {
    "@types/node-telegram-bot-api": "^0.64.8",
    "typescript": "^5.5.3"
  },
  "private": true
