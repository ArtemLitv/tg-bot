# Настройки базы данных
# URL для подключения к SQLite базе данных
DATABASE_URL="file:./prisma/dev.db"

# Токен Telegram бота (получите его у @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Путь к файлу конфигурации бота (опционально)
# Если не указан, используется путь по умолчанию: config/bot-config.json
BOT_CONFIG_PATH=config/bot-config.json

# Уровень логирования (опционально)
# Возможные значения: error, warn, info, debug
# По умолчанию: info
LOG_LEVEL=info

# Настройки сервера
# Порт, на котором будет запущен сервер
PORT=3001
# Секретный ключ для сессий (используйте случайную строку)
SESSION_SECRET=your_session_secret

# Настройки JWT
# Секретный ключ для подписи JWT токенов (используйте случайную строку)
JWT_SECRET=your_jwt_secret
# Время жизни JWT токена
JWT_EXPIRES_IN=1d

# Настройки Google OAuth
# ID клиента Google (получите в Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id
# Секрет клиента Google (получите в Google Cloud Console)
GOOGLE_CLIENT_SECRET=your_google_client_secret
# URL для перенаправления после авторизации через Google
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# Настройки администратора по умолчанию
# Имя пользователя администратора по умолчанию
DEFAULT_ADMIN_USERNAME=admin
# Пароль администратора по умолчанию
DEFAULT_ADMIN_PASSWORD=admin
# Email администратора по умолчанию
DEFAULT_ADMIN_EMAIL=admin@example.com
